.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #f3f5f7
    border-color $badgeTipColor
  &.warning
    background-color lighten($badgeWarningColor, 70%)
    border-color darken($badgeWarningColor, 35%)
    color darken($badgeWarningColor, 70%)
    .custom-block-title
      color darken($badgeWarningColor, 50%)
    a
      color $textColor
  &.danger
    background-color #ffe6e6
    border-color darken($badgeErrorColor, 20%)
    color darken($badgeErrorColor, 70%)
    .custom-block-title
      color darken($badgeErrorColor, 40%)
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
